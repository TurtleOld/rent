# Django Settings
SECRET_KEY=your-secret-key-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
# Use DATABASE_URL for PostgreSQL (recommended for production)
# Format: postgresql://username:password@host:port/database_name
# Examples:
# - postgresql://postgres:password@localhost:5432/utility_parser
# - postgresql+ssl://postgres:password@localhost:5432/utility_parser (with SSL)
# - postgres://postgres:password@localhost:5432/utility_parser (alternative scheme)
# Leave empty or unset to use SQLite (development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/utility_parser

# Alternative: Individual database settings (legacy - not used with DATABASE_URL)
DB_NAME=utility_parser
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB in bytes

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Security (for production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Manual data entry - no external API required 